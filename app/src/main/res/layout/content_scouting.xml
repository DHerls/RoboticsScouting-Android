<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scouting"
    tools:context=".ScoutingActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainLinear"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="General"
                android:id="@+id/titleGeneral"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Connection:"
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center" />

                    <View android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/indicator_circle"
                        android:id="@+id/connection_indicator"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Advertising:"
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="20dp"
                        />

                    <View android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/indicator_circle"
                        android:id="@+id/advertising_indicator"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/generalLinear1"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Team Number"
                        android:id="@+id/label_team_num"
                        android:textColor="#000000" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/team_num"
                        android:hint="Team Number"
                        android:numeric="integer"
                        android:maxLength="4" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Match Number"
                        android:id="@+id/textView2"
                        android:textColor="#000000" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/match_num"
                        android:hint="Match Number"
                        android:maxLength="4" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/general_linear_2"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Alliance Color"
                        android:id="@+id/textView3"
                        android:textColor="#000000" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/team_color"
                        android:textOff="Blue"
                        android:textOn="Red"
                        android:showText="true"
                        android:checked="false"
                        android:layout_gravity="center_horizontal"
                        android:switchMinWidth="56dp"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Bluetooth Code"
                        android:id="@+id/textView4"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="51dp"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:ems="10"
                            android:id="@+id/bluetoothCode"
                            android:hint="ex. 333B"
                            android:layout_weight="0.89"
                            android:maxLength="4" />

                        <ImageButton android:id="@+id/detail_refresh_btn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_action_refresh1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
